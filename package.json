{
  "name": "ssgoi",
  "homepage": "https://ssgoi.dev",
  "version": "2.0.0",
  "private": true,
  "description": "SSGOI is a powerful and easy-to-use page transition library for Svelte and SvelteKit applications.",
  "scripts": {
    "build": "pnpm --filter ssgoi package",
    "core:watch": "pnpm --filter @ssgoi/core watch",
    "core:build": "pnpm --filter @ssgoi/core build",
    "react:build": "pnpm --filter @ssgoi/react build",
    "react:watch": "pnpm --filter @ssgoi/react watch",
    "svelte:build": "pnpm --filter @ssgoi/svelte build",
    "svelte:watch": "pnpm --filter @ssgoi/svelte watch",
    "vue:build": "pnpm --filter @ssgoi/vue build",
    "vue:watch": "pnpm --filter @ssgoi/vue watch",
    "docs": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "react-demo": "pnpm --filter react-demo dev",
    "svelte-demo": "pnpm --filter svelte-demo dev",
    "vue-demo": "pnpm --filter vue-demo dev",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "legacy-docs": "pnpm --filter legacy-docs dev",
    "legacy-docs:build": "pnpm --filter legacy-docs build",
    "prepare": "husky"
  },
  "author": "meursyphus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meursyphus/ssgoi.git"
  },
  "bugs": {
    "url": "https://github.com/meursyphus/ssgoi/issues"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "page-transition",
    "animation"
  ],
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "framer-motion": "^12.23.12",
    "next-mdx-remote-client": "^2.1.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "highlight.js": "^11.11.1",
    "highlightjs-svelte": "^1.0.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "lint-staged": {
    "packages/core/**/*.{ts,tsx}": [
      "prettier --write --config packages/core/.prettierrc"
    ],
    "packages/react/**/*.{ts,tsx}": [
      "prettier --write --config packages/react/.prettierrc"
    ],
    "packages/svelte/**/*.{ts,svelte}": [
      "prettier --write --config packages/svelte/.prettierrc"
    ],
    "packages/vue/**/*.{ts,vue}": [
      "prettier --write --config packages/vue/.prettierrc"
    ],
    "apps/docs/**/*.{ts,tsx,js,jsx}": [
      "prettier --write --config apps/docs/.prettierrc"
    ],
    "apps/react-demo/**/*.{ts,tsx,js,jsx}": [
      "prettier --write --config apps/react-demo/.prettierrc"
    ],
    "apps/svelte-demo/**/*.{ts,js,svelte}": [
      "prettier --write --config apps/svelte-demo/.prettierrc"
    ],
    "apps/vue-demo/**/*.{ts,js,vue}": [
      "prettier --write --config apps/vue-demo/.prettierrc"
    ]
  }
}
