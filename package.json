{
  "name": "ssgoi",
  "homepage": "https://ssgoi.dev",
  "version": "1.0.0",
  "private": true,
  "description": "SSGOI is a powerful and easy-to-use page transition library for Svelte and SvelteKit applications.",
  "scripts": {
    "build": "pnpm --filter ssgoi package",
    "react:build": "pnpm --filter @ssgoi/react build",
    "svelte:build": "pnpm --filter @ssgoi/svelte build",
    "docs": "concurrently \"pnpm --filter @ssgoi/react build --watch\" \"pnpm --filter docs dev\"",
    "docs:build": "pnpm --filter @ssgoi/react build && pnpm --filter docs build",
    "react-demo": "concurrently \"pnpm --filter @ssgoi/react build --watch\" \"pnpm --filter react-demo dev\"",
    "svelte-demo": "concurrently \"pnpm --filter @ssgoi/svelte build --watch\" \"pnpm --filter svelte-demo dev\"",
    "react-demo:build": "pnpm --filter @ssgoi/react build && pnpm --filter react-demo build",
    "svelte-demo:build": "pnpm --filter @ssgoi/svelte build && pnpm --filter svelte-demo build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "legacy-docs": "pnpm --filter legacy-docs dev",
    "legacy-docs:build": "pnpm --filter legacy-docs build"
  },
  "author": "meursyphus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meursyphus/ssgoi.git"
  },
  "bugs": {
    "url": "https://github.com/meursyphus/ssgoi/issues"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "page-transition",
    "animation"
  ],
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "dependencies": {
    "next-mdx-remote-client": "^2.1.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}